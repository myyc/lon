<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>dev.myyc.lon</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <name>lon</name>
  <summary>A Pantone color browser</summary>
  <description>
    <p>
      lon is a minimal, elegant Pantone color browser. Browse thousands of colors
      from multiple Pantone libraries, filter by color family, search by name or hex,
      and sort by hue, saturation, or lightness.
    </p>
    <p>Features:</p>
    <ul>
      <li>Browse Fashion, Home + Interiors (TCX) and Solid Coated color libraries</li>
      <li>Filter colors by family (Red, Orange, Yellow, Green, Cyan, Blue, Purple, Pink, Brown, Neutral)</li>
      <li>Search by color name or hex value</li>
      <li>Sort by name, hue, saturation, or lightness</li>
      <li>View detailed color information with RGB and HSL values</li>
      <li>Copy color values to clipboard</li>
    </ul>
  </description>

  <launchable type="desktop-id">dev.myyc.lon.desktop</launchable>

  <url type="homepage">https://github.com/myyc/lon</url>
  <url type="bugtracker">https://github.com/myyc/lon/issues</url>

  <developer id="dev.myyc">
    <name>myyc</name>
  </developer>

  <branding>
    <color type="primary" scheme_preference="light">#f06292</color>
    <color type="primary" scheme_preference="dark">#7c4dff</color>
  </branding>

  <content_rating type="oars-1.1"/>

  <releases>
    <release version="0.1.0" date="2025-12-25">
      <description>
        <p>Initial release</p>
      </description>
    </release>
  </releases>

  <requires>
    <display_length compare="ge">360</display_length>
  </requires>

  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>
</component>
